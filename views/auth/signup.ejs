<%- include("../includes/head" , {pageTitle : "Signup"}) %>
<link rel="stylesheet" href="/styles/form.css">
</head>
<body>
    <main>
        <h1>Create New Account</h1>
        <form action="/signup" method="POST">
            <% if (inputData.errorMessage) { %>
                <section class="alert">
                   <h2>Invalid input</h2>
                   <p><%= inputData.errorMessage %></p>
                </section>
            <% } %>
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%= inputData.password %>" minlength="6" required>
            </p>
            <p>
                <label for="confirm-password">Confirm Password</label>
                <input type="password" id="confirm-password" name="confirm" value="<%= inputData.confirm %>" minlength="6" required>
            </p>
            <hr>
            <p>
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" value="<%= inputData.name %>" required>
            </p>
            <p>
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="<%= inputData.address %>" required>
            </p>
            <p>
                <label for="phone">Phone Number</label>
                <input type="number" id="phone" name="phone" value="<%= inputData.phone %>" required>
            </p>
            <p>
                <label for="account">Account Number</label>
                <input type="number" id="account" name="account" value="<%= inputData.account %>" min="000000000000" max="999999999999" required>
            </p>
            <button class="submit-btn">Create Account</button>
            <p id="switch-from"><a href="/login">Login Instead</a></p>
        </form>
    </main>
</body>
</html>