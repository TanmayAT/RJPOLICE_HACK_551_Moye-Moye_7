<%- include("../includes/head" , {pageTitle : "Login"}) %>
<link rel="stylesheet" href="/styles/form.css">
</head>
<body>
    <main>
        <h1>Login to exisiting account</h1>
        <form action="/login" method="POST">
            <% if (inputData.errorMessage) { %>
             <section class="alert">
                <h2>Invalid input</h2>
                <p><%= inputData.errorMessage %></p>
             </section>
            <% } %>
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" value="<%= inputData.password %>" minlength="6" required>
            </p>
            <button class="btn">Login</button>
            <p id="switch-from"><a href="/signup">Create a new account</a></p>
            
        </form>
    </main>
</body>
</html>